@using ViewRes
@using Webmall.Model

<div class="import">
    <h3>@SharedResources.ImportToCart</h3>
    @using (Html.BeginForm("ImportToCart", "Cart", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="upload-file__field">
                    @*<i class="fas fa-file-excel"></i>*@
                    <input class="upload-file__upload" type="file" id="upload-price-file" name="file"
                           accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel">
                    <label class="upload-file__label" for="upload-price-file">
                        <span>@SharedResources.SelectFile Excel</span>
                        @*<input type="text" placeholder="@SharedResources.SelectFile Excel" readonly/>*@
                    </label>
                </div>
                @*<div class="file-loading">
                        <input id="kv-explorer" name="file" type="file" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel">
                    </div>*@
                @*<div class="file-loading">
                        <input id="file-0a" class="file" type="file" multiple data-min-file-count="1" data-theme="fas">
                    </div>*@
            </div>
            @*<div class="col-md-4">
                    <input class="upload-file__btn btn btn--main" type="submit" value="@SharedResources.ImportToCart">
                </div>*@
            <div class="col-md-6">
                <div class="upload-file__example">@Html.Raw(string.Format(SharedResources.DownloadImportFileExample, Url.Content(ConfigHelper.CartImportFileExamplePath)))</div>
            </div>
            <div class="col-md-6">
                <input class="upload-file__btn btn btn--main" type="submit" value="@SharedResources.ImportToCart">
            </div>
        </div>
        <h4 style="display: none">Колонки </h4>
        <div class="row align-items-center" style="display: none">
            <div class="col-md-3">
                <div class="import__column-number">
                    <label for="codeColumn"><span>@SharedResources.Code:</span></label>
                    <div class="import-cols__counter">
                        <div class="counter">
                            <button class="counter__btn counter--remove">-</button>
                            <input class="counter__field" type="tel" name="codeColumn" id="codeColumn" value="1">
                            <button class="counter__btn counter--add">+</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="import__column-number">
                    <label for="brandColumn"><span>@SharedResources.Brand:</span></label>
                    <div class="import-cols__counter">
                        <div class="counter">
                            <button class="counter__btn counter--remove">-</button>
                            <input class="counter__field" type="tel" name="brandColumn" id="brandColumn" value="2">
                            <button class="counter__btn counter--add">+</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="import__column-number">
                    <label for="qntColumn"><span>@SharedResources.Amount:</span></label>
                    <div class="import-cols__counter">
                        <div class="counter">
                            <button class="counter__btn counter--remove">-</button>
                            <input class="counter__field" type="tel" name="qntColumn" id="qntColumn" value="3">
                            <button class="counter__btn counter--add">+</button>
                        </div>
                    </div>
                </div>
            </div>
            @*<div class="col-md-3">
                    <input class="upload-file__btn btn btn--main" type="submit" value="@SharedResources.ImportToCart">
                </div>*@
        </div>
    }
</div>